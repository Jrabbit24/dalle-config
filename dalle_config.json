        self.default_config = {
            "languages": {"English": "en", "Indonesian": "id"},
            "compositions": ["Close-up", "Medium shot"],
            "lightings": ["Golden hour", "Neon lighting"],
            "styles": ["Cinematic", "3D rendering"],
